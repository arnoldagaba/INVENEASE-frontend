# API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_API_TIMEOUT=30000

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8000/ws
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=1000

# Authentication
VITE_JWT_SECRET=your_jwt_secret_here
VITE_JWT_EXPIRY=7d

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# Theme Configuration
VITE_DEFAULT_THEME=light # or dark

# Pagination
VITE_ITEMS_PER_PAGE=10

# File Upload
VITE_MAX_FILE_SIZE=5242880 # 5MB in bytes
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Cache Configuration
VITE_CACHE_DURATION=3600000 # 1 hour in milliseconds

# Analytics Configuration
VITE_ANALYTICS_DEFAULT_RANGE=7 # days
VITE_ANALYTICS_UPDATE_INTERVAL=5000 # 5 seconds 